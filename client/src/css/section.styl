@import 'nib'
@import 'variables.styl'

.section-container
    background $background
    display flex
    flex-direction row
    flex-wrap nowrap
    align-content flex-start
    justify-content space-evenly

.section-vertical
    flex-direction column

section
    position relative
    border 1px solid $alt
    flex 1 1 30%
    margin 10px
    min-height 100px
    color white
    text-align center
    &.section-container
        border none
        margin 0

    &:before
        absolute top -15px left 10px
        content attr(data-label)
        background $background
        color $alt
        padding 5px

.section-meta
    absolute bottom 5px right 5px

    div
        position relative

    div:before
        color $alt
        content attr(data-label)
        absolute left -150px
        width 145px
        text-align right

.section-meta-alt
    absolute bottom 5px left 5px
    span + span
        margin-left 10px

.section-main
    font-size 3em
    margin 1em 0
